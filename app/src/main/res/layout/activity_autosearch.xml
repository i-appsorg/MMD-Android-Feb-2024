        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/autocomplete_places"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical" />

</LinearLayout>